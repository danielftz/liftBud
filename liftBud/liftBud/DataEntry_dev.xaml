<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="liftBud.DataEntry_dev">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="35,0,35,0" Orientation="Vertical">
                <Entry x:Name="id" Placeholder="Id" Keyboard="Numeric"/>

                <Label x:Name ="male" Text= "Male">
                    <Label.Triggers >
                        <DataTrigger TargetType="Label" 
                                Binding ="{Binding Source= {x:Reference sexSwitch},Path=IsToggled}"
                                Value="False">
                            <Setter Property="Text" Value="Female"/>
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Switch x:Name="sexSwitch" HorizontalOptions="Start"/>

                <Entry x:Name="age" Placeholder="Age" Keyboard="Numeric"/>
                <Entry x:Name="height" Placeholder="Height(cm)" Keyboard="Numeric"/>
                <Entry x:Name="weight" Placeholder="Weight(kg)" Keyboard="Numeric"/>
                <Entry x:Name="measurement1" Placeholder="Measurement1(cm) waist" Keyboard="Numeric"/>
                <Entry x:Name="measurement2" Placeholder="Measurement2(cm) neck" Keyboard="Numeric"/>
                <Entry x:Name="measurement3" Placeholder="Measurement3(cm) hip (female only)" Keyboard="Numeric"/>
                <Entry x:Name="bfPercent" Placeholder="Bodyfat Percentage" Keyboard="Numeric"/>

                <Label x:Name ="model" Text ="Normal Mode">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                                 Binding="{Binding Source={x:Reference modeSwitch},Path=IsToggled}"
                                 Value="False">
                            <Setter Property="Text" Value="Advanced Mode"/>
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Switch x:Name="modeSwitch" HorizontalOptions="Start"/>

                <Entry x:Name="activity" Placeholder="Activity Level" Keyboard="Numeric"/>
                <Entry x:Name="mealsPerDay" Placeholder="Meals Per Day" Keyboard="Numeric"/>
                <Entry x:Name="goal" Placeholder="Select Goal" Keyboard="Numeric" />
                <Slider x:Name="protein_slider" Maximum="100" ValueChanged="OnMacroChanged"/>
                <Slider x:Name="fat_slider" Maximum="100" ValueChanged="OnMacroChanged"/>
                <Slider x:Name="carb_slider" Maximum="100" ValueChanged="OnMacroChanged"/>
                <Label x:Name="macroPercent"/>
                <Button x:Name="autoMacro"/>
                <Button x:Name="submit" Text="Submit" Clicked="Submit_Clicked"/>



            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>

</ContentPage>